<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codeup.booknova.ui.controller.UserDashboardController">
   <top>
      <VBox style="-fx-background-color: #FF9800;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="NovaBook - Catálogo Público" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Cerrar Sesión" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="15.0">
         <children>
            <!-- Left Panel - Book Catalog -->
            <VBox spacing="10.0" prefWidth="400.0">
               <children>
                  <Label text="Catálogo de Libros">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="searchField" promptText="Buscar por título, autor..." HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Buscar" />
                     </children>
                  </HBox>
                  
                  <TableView fx:id="catalogTable" prefHeight="400.0" />
                  
                  <HBox alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleRequestMembership" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Solicitar Membresía" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Right Panel - Book Details -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Detalles del Libro">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <TextArea fx:id="bookDetailsArea" editable="false" prefHeight="400.0" promptText="Seleccione un libro de la lista para ver sus detalles..." wrapText="true" />
                  
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #e3f2fd; -fx-border-color: #2196F3; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <children>
                        <Label text="ℹ️ Información" style="-fx-font-weight: bold;" />
                        <Label text="Para realizar préstamos, necesita una membresía activa." />
                        <Label text="Haga clic en 'Solicitar Membresía' para comenzar." />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </center>
   
   <bottom>
      <VBox style="-fx-background-color: #f5f5f5;">
         <children>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Label text="📖 Catálogo completo disponible" />
                  <Label text="🔍 Búsqueda avanzada" />
                  <Label text="👤 Registro de membresía simple" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>