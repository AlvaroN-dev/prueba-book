<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codeup.booknova.ui.controller.UserDashboardController">
   <top>
      <VBox style="-fx-background-color: #FF9800;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="NovaBook - Public Catalog" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Logout" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="15.0">
         <children>
            <!-- Left Panel - Book Catalog -->
            <VBox spacing="10.0" prefWidth="400.0">
               <children>
                  <Label text="Book Catalog">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="searchTypeComboBox" promptText="Search by..." prefWidth="120.0" />
                        <TextField fx:id="searchField" promptText="Search books..." HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Search" />
                     </children>
                  </HBox>
                  
                  <TableView fx:id="catalogTable" prefHeight="400.0" />
                  
                  <HBox alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleRequestMembership" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Request Membership" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Right Panel - Book Details -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Book Details">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <TextArea fx:id="bookDetailsArea" editable="false" prefHeight="300.0" promptText="Select a book from the list to see details..." wrapText="true" />
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="requestLoanButton" mnemonicParsing="false" onAction="#handleRequestLoan" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="📚 Request Loan" disable="true" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #e3f2fd; -fx-border-color: #2196F3; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <children>
                        <Label text="ℹ️ Information" style="-fx-font-weight: bold;" />
                        <Label text="To borrow books, you need an active membership." />
                        <Label text="Click 'Request Membership' to get started." />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </center>
   
   <bottom>
      <VBox style="-fx-background-color: #f5f5f5;">
         <children>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Label text="📖 Complete catalog available" />
                  <Label text="🔍 Advanced search" />
                  <Label text="👤 Simple membership registration" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>