<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codeup.booknova.ui.controller.MemberDashboardController">
   <top>
      <VBox style="-fx-background-color: #4CAF50;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="NovaBook - Member Dashboard" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Logout" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="10.0">
         <children>
            <!-- Left Panel - Available Books -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Available Books">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="searchField" promptText="Search books..." HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Search" />
                     </children>
                  </HBox>
                  
                  <TableView fx:id="availableBooksTable" prefHeight="300.0" />
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleBorrowBook" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Borrow Book" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Right Panel - My Loans -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="My Loans">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <TableView fx:id="myLoansTable" prefHeight="300.0" />
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleReturnBook" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Return Book" />
                        <Button mnemonicParsing="false" onAction="#handleRenewLoan" style="-fx-background-color: #9C27B0; -fx-text-fill: white;" text="Renew Loan" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </center>
   
   <bottom>
      <VBox style="-fx-background-color: #f5f5f5;">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="ðŸ“š Loan limit: 3 books" />
                  <Label text="ðŸ“… Maximum duration: 15 days" />
                  <Label text="ðŸ”„ Renewals: 1 per book" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>