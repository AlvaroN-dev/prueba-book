<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codeup.booknova.ui.controller.AdminDashboardController">
   <top>
      <VBox style="-fx-background-color: #2196F3;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="NovaBook - Administrator Dashboard" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Logout" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>

   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Users">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="User Management">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#handleAddUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add User" />
                              <Button mnemonicParsing="false" onAction="#handleEditUser" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Edit User" />
                              <Button mnemonicParsing="false" onAction="#handleDeleteUser" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Delete User" />
                              <Button mnemonicParsing="false" onAction="#handleToggleUserStatus" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Activate/Deactivate" />
                           </children>
                        </HBox>
                        <TableView fx:id="usersTable" prefHeight="400.0" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>

            <Tab text="Books">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Book Management">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#handleAddBook" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Add Book" />
                              <Button mnemonicParsing="false" onAction="#handleExportBooksCSV" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Export Catalog CSV" />
                           </children>
                        </HBox>
                        <TableView fx:id="booksTable" prefHeight="400.0" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>

            <Tab text="Loans">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Loan Management">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#handleManageLoans" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Manage Loans" />
                              <Button mnemonicParsing="false" onAction="#handleExportOverdueLoansCSV" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Export Overdue Loans CSV" />
                           </children>
                        </HBox>
                        <TableView fx:id="loansTable" prefHeight="400.0" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>

            <Tab text="Membership Requests">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Pending Membership Requests">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#handleApproveMembershipRequest" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Approve Request" />
                              <Button mnemonicParsing="false" onAction="#handleRejectMembershipRequest" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Reject Request" />
                              <Button mnemonicParsing="false" onAction="#handleRefreshMembershipRequests" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="membershipRequestsTable" prefHeight="400.0" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>

            <Tab text="Reports">
               <content>
                  <VBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label text="Reports and Statistics">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text="ðŸ“Š Statistics Dashboard" />
                        <Label text="ðŸ“ˆ Activity Reports" />
                        <Label text="ðŸ“‹ Loan Reports" />
                        <Label text="(Features to be implemented)" style="-fx-text-fill: #666666;" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>